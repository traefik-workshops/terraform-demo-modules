#cloud-config
# This config is for the "Day 0" runtime configuration of the pre-packaged VM.
# The binary is already installed and the service is enabled.
# We just need to provide the Token.

write_files:
  - path: /etc/traefik-hub/traefik-hub.yaml
    content: |
      global:
        checkNewVersion: true
        sendAnonymousUsage: false

      hub:
        token: ""

      entryPoints:
        web:
          address: ":80"
        websecure:
          address: ":443"
        traefik:
          address: ":8080"

      api:
        dashboard: true
        insecure: true

      log:
        level: INFO

      accessLog: {}
    permissions: "0644"
